{
  "name": "Reddit CRAFT Extension",
  "version": "0.2",
  "description": "Runs CRAFT in real-time to inform new reddit comments",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "page_action": {
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://old.reddit.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery.js",
        "oldRedditContentScript.js"
      ]
    },
    {
      "matches": [
        "*://reddit.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "jquery.js",
        "newRedditContentScript.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "manifest_version": 2
}